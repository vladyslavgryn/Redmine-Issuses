{
    "manifest_version": 2,

    "name": "Redmine Issuses",
    "description": "Wyświetla nowo dodane zgłoszenia Redmine",
    "homepage_url": "http://192.168.3.12",
    "version": "0.1",

    "icons": {
        "48": "images/icon48.png"
    },

    "options_ui": {
        "page": "html/option.html",
        "chrome_style": true
    },

    "browser_action": {
        "default_icons": {
            "16": "images/icon16",
            "48": "images/icon48",
            "128": "images/icon128"
        },
        "default_title": "Pobieranie nowych zgłoszeń"
    },

    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },

    "web_accessible_resources": [
        "images/icon48.png"
    ],

    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ]
}